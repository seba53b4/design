---
import Button from "./Button.astro";
interface Props {
  text: string;
  textAccent: string;
  image: string;
  imageAlt: string;
  link: string;
}

const { text, textAccent, image, imageAlt, link } = Astro.props;
---

<div
  class="container w-7/12 mx-auto md:mx-0 md:w-full min-w-[400px] md:min-w-0"
>
  <div class="relative">
    <img
      class="w-full border-white border-4 transition-transform duration-300 ease-in-out transform hover:rotate-2 hover:scale-125 hover:z-10 relative"
      src={image}
      alt={imageAlt}
    />
  </div>
  <div class="text-center -translate-y-12 relative z-20">
    <h2
      class="mx-5 mt-5 p-5 font-italianno text-4xl text-secondary text-center bg-white leading-7"
    >
      {text}
      <span class="block font-lato text-black">{textAccent}</span>
    </h2>
    <Button text="Leer mÃ¡s" link={link} className="my-5" />
  </div>
</div>
